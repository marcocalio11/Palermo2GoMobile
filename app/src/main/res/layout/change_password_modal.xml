<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="20dp"
    android:layout_width="wrap_content"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="50dp"
        android:background="@color/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cambia_password"
            android:textColor="@color/primary"
            android:textSize="21sp" />





                <androidx.cardview.widget.CardView
                    android:layout_below="@id/title"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/searchCardView"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:textColorHint="@color/white"
                        android:background="@color/lightTrasparent"
                        android:hint="@string/vecchia_password"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:gravity="center"
                        />
                </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_below="@id/searchCardView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/newpassword"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newpasswordtext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColorHint="@color/white"
                android:background="@color/lightTrasparent"
                android:hint="@string/nuova_password"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:gravity="center"
                />
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_below="@id/newpassword"
            app:cardCornerRadius="200dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/pagaButton"
                android:background="@color/primary"
                android:layout_width="match_parent"
                android:textColor="@color/background"
                android:layout_height="wrap_content"
                android:text="@string/cambia_password"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>